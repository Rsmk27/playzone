<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Memory Match | PlayZone</title>
<style>
  body {
    background: #1a1a2e;
    color: #fff;
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 20px;
  }
  h1 {
    color: #00ffff;
    margin-bottom: 20px;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(4, 80px);
    grid-gap: 10px;
    justify-content: center;
    margin-top: 20px;
  }
  .card {
    width: 80px;
    height: 80px;
    background: #111;
    border-radius: 10px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2em;
    user-select: none;
    transition: transform 0.2s;
  }
  .card.flipped {
    background: #00ffff;
    color: #111;
    transform: rotateY(180deg);
  }
  .score {
    margin-top: 15px;
    font-size: 16px;
    color: #ccc;
  }
  a {
    display: inline-block;
    margin-top: 30px;
    padding: 10px 16px;
    text-decoration: none;
    background: #00ffff;
    color: #111;
    border-radius: 6px;
    transition: 0.2s;
  }
  a:hover {
    background: #00cccc;
  }
</style>
</head>
<body>
<h1>Memory Match üÉè</h1>
<div class="grid" id="grid"></div>
<div class="score" id="score">Matches: 0</div>
<a href="../index.html">‚¨Ö Back to Home</a>

<script>
const grid = document.getElementById('grid');
const scoreEl = document.getElementById('score');
let cards = [];
let firstCard = null;
let secondCard = null;
let matches = 0;

function shuffle(array) {
  return array.sort(() => Math.random() - 0.5);
}

// Card symbols (8 pairs)
const symbols = ['üçé','üçå','üçá','üçí','üçâ','ü•ù','üçç','ü••'];
cards = shuffle([...symbols, ...symbols]);

cards.forEach((symbol, index) => {
  const card = document.createElement('div');
  card.classList.add('card');
  card.dataset.symbol = symbol;
  card.addEventListener('click', flipCard);
  grid.appendChild(card);
});

function flipCard() {
  if (this.classList.contains('flipped') || secondCard) return;

  this.classList.add('flipped');
  this.textContent = this.dataset.symbol;

  if (!firstCard) {
    firstCard = this;
  } else {
    secondCard = this;
    checkMatch();
  }
}

function checkMatch() {
  if (firstCard.dataset.symbol === secondCard.dataset.symbol) {
    matches++;
    scoreEl.textContent = `Matches: ${matches}`;
    firstCard = null;
    secondCard = null;
    if (matches === symbols.length) setTimeout(() => alert('You Won! üéâ'), 100);
  } else {
    setTimeout(() => {
      firstCard.classList.remove('flipped');
      secondCard.classList.remove('flipped');
      firstCard.textContent = '';
      secondCard.textContent = '';
      firstCard = null;
      secondCard = null;
    }, 800);
  }
}
</script>
</body>
</html>
