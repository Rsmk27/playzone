<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pong Game</title>
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }
        h1 {
            color: #00A8E8;
            font-size: 2em;
            text-shadow: 0 0 5px #00A8E8;
            margin-bottom: 20px;
        }
        canvas {
            background-color: #1c1c1c;
            border: 2px solid #00A8E8;
            box-shadow: 0 0 15px #00A8E8;
        }
        .controls {
            margin-top: 20px;
            font-size: 1.1em;
            color: #e0e0e0;
            line-height: 1.5;
        }
        .controls span {
            color: #00A8E8;
            font-weight: bold;
        }
        .message-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(28, 28, 28, 0.9);
            border: 2px solid #00A8E8;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 168, 232, 0.5);
            text-align: center;
            z-index: 1000;
            display: none;
            flex-direction: column;
            align-items: center;
        }
        .message-box h2 {
            margin-top: 0;
            color: #00A8E8;
        }
        .message-box button {
            background-color: #00A8E8;
            color: #000;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Pong</h1>
    <canvas id="pongCanvas" width="800" height="600"></canvas>
    <div class="controls">
        <p>Player 1: <span>W</span> and <span>S</span></p>
        <p>Player 2: <span>Up Arrow</span> and <span>Down Arrow</span></p>
    </div>
    <div id="messageBox" class="message-box">
        <h2 id="messageTitle"></h2>
        <p id="messageText"></p>
        <button onclick="startGame()">Start Game</button>
    </div>

    <script>
        const canvas = document.getElementById('pongCanvas');
        const ctx = canvas.getContext('2d');
        let gameRunning = false;
        let p1Score = 0;
        let p2Score = 0;
        const maxScore = 5;

        const paddleWidth = 10;
        const paddleHeight = 100;
        const ballRadius = 10;

        let ball = { x: canvas.width / 2, y: canvas.height / 2, dx: 5, dy: 5 };
        let p1Paddle = { x: 10, y: (canvas.height - paddleHeight) / 2, dy: 0 };
        let p2Paddle = { x: canvas.width - 20, y: (canvas.height - paddleHeight) / 2, dy: 0 };

        const keys = {};
        window.addEventListener('keydown', e => keys[e.key] = true);
        window.addEventListener('keyup', e => keys[e.key] = false);

        function drawRect(x, y, w, h, color) {
            ctx.fillStyle = color;
            ctx.fillRect(x, y, w, h);
        }

        function drawCircle(x, y, r, color) {
            ctx.fillStyle = color;
            ctx.beginPath();
            ctx.arc(x, y, r, 0, Math.PI * 2, false);
            ctx.closePath();
            ctx.fill();
        }

        function drawText(text, x, y, color, font) {
            ctx.fillStyle = color;
            ctx.font = font;
            ctx.textAlign = 'center';
            ctx.fillText(text, x, y);
        }

        function resetBall() {
            ball.x = canvas.width / 2;
            ball.y = canvas.height / 2;
            ball.dx = (Math.random() > 0.5 ? 5 : -5);
            ball.dy = (Math.random() * 5 + 3) * (Math.random() > 0.5 ? 1 : -1);
        }

        function update() {
            if (!gameRunning) return;

            // Paddle movement
            if (keys['w'] && p1Paddle.y > 0) p1Paddle.y -= 7;
            if (keys['s'] && p1Paddle.y + paddleHeight < canvas.height) p1Paddle.y += 7;
            if (keys['ArrowUp'] && p2Paddle.y > 0) p2Paddle.y -= 7;
            if (keys['ArrowDown'] && p2Paddle.y + paddleHeight < canvas.height) p2Paddle.y += 7;

            // Ball movement
            ball.x += ball.dx;
            ball.y += ball.dy;

            // Ball collision with top/bottom walls
            if (ball.y + ballRadius > canvas.height || ball.y - ballRadius < 0) {
                ball.dy = -ball.dy;
            }

            // Ball collision with paddles
            if (ball.dx < 0) { // Moving left
                if (ball.x - ballRadius < p1Paddle.x + paddleWidth &&
                    ball.y > p1Paddle.y &&
                    ball.y < p1Paddle.y + paddleHeight) {
                    ball.dx = -ball.dx;
                }
            } else { // Moving right
                if (ball.x + ballRadius > p2Paddle.x &&
                    ball.y > p2Paddle.y &&
                    ball.y < p2Paddle.y + paddleHeight) {
                    ball.dx = -ball.dx;
                }
            }

            // Ball out of bounds (scoring)
            if (ball.x - ballRadius < 0) {
                p2Score++;
                resetBall();
            } else if (ball.x + ballRadius > canvas.width) {
                p1Score++;
                resetBall();
            }

            // Check for game over
            if (p1Score >= maxScore || p2Score >= maxScore) {
                gameRunning = false;
                showMessageBox(p1Score >= maxScore ? 'Player 1 Wins!' : 'Player 2 Wins!', 'Press the button to play again.');
            }
        }

        function draw() {
            // Clear canvas
            drawRect(0, 0, canvas.width, canvas.height, '#1c1c1c');
            
            // Draw scores
            drawText(p1Score, canvas.width / 4, canvas.height / 5, '#e0e0e0', '40px Arial');
            drawText(p2Score, canvas.width * 3 / 4, canvas.height / 5, '#e0e0e0', '40px Arial');

            // Draw paddles
            drawRect(p1Paddle.x, p1Paddle.y, paddleWidth, paddleHeight, '#fff');
            drawRect(p2Paddle.x, p2Paddle.y, paddleWidth, paddleHeight, '#fff');
            
            // Draw ball
            drawCircle(ball.x, ball.y, ballRadius, '#00A8E8');

            // Draw center line
            for(let i = 0; i < canvas.height; i += 20) {
                drawRect(canvas.width / 2 - 1, i, 2, 10, '#e0e0e0');
            }
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        function showMessageBox(title, text) {
            document.getElementById('messageTitle').innerText = title;
            document.getElementById('messageText').innerText = text;
            document.getElementById('messageBox').style.display = 'flex';
        }

        function startGame() {
            p1Score = 0;
            p2Score = 0;
            resetBall();
            gameRunning = true;
            document.getElementById('messageBox').style.display = 'none';
        }

        window.onload = function() {
            showMessageBox('Welcome to Pong!', 'Get ready to play against a friend. The first to 5 points wins!');
            gameLoop();
        };
    </script>
</body>
</html>
